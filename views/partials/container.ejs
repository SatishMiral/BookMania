<html>
    <body>
        <div class="parent-container">
            <% if(locals.data){ %>
                <%data.forEach((item)=>{%>
                    <div class="card">
                        <form action="/view" method="post">
                            <input type="hidden" name="description" value="<%= item.volumeInfo.description %>">
                            <input type="hidden" name="thumbnail" value="<%= item.volumeInfo.imageLinks && item.volumeInfo.imageLinks.smallThumbnail ? item.volumeInfo.imageLinks.smallThumbnail : '/images/default-book.png' %>">
                            <input type="hidden" name="title" value="<%= item.volumeInfo.title %>">
                            <input type="hidden" name="authors" value="<%= item.volumeInfo.authors %>">
                            <input type="hidden" name="publisher" value="<%= item.volumeInfo.publisher %>">
                            <input type="hidden" name="publishedDate" value="<%= item.volumeInfo.publishedDate %>">
                            <input type="hidden" name="previewLink" value="<%= item.volumeInfo.previewLink %>">
                            <button class="buttom img" type="submit">
                                <img src="<%= item.volumeInfo.imageLinks && item.volumeInfo.imageLinks.smallThumbnail ? item.volumeInfo.imageLinks.smallThumbnail : '/images/default-book.png' %>" alt="" />
                            </button>
                        </form>
                        
                        <div class="bottom title">
                            <h3 class="title"><%=item.volumeInfo.title%></h3>
                            <p class="amount"><%=item.volumeInfo.authors%></p>
                        </div>
                    </div>
            <% }) %>    
            <% } %>
        </div>
    </body>
</html>

